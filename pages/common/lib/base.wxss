.search-icon {
  width: 15px;
  height: 15px;
  color: #fff;
}

/*下拉列表下三角  */

.icon-down {
  padding-top: 7px;
  width: 0;
  height: 0;
  border-bottom: 6px solid transparent;
  border-top: 6px solid #fff;
  border-right: 6px solid transparent;
  border-left: 6px solid transparent;
  margin-right: 10px;
  margin-top: 4px;
}

/*下拉列表上三角  */

.icon-up {
  padding-top: 7px;
  width: 0;
  height: 0;
  border-bottom: 6px solid #fff;
  border-top: 6px solid transparent;
  border-right: 6px solid transparent;
  border-left: 6px solid transparent;
  margin-right: 10px;
  margin-top: -8px;
}

/*向右图标  */

.arrow {
  padding-right: 4.6%;
  position: relative;
}

.arrow:after {
  content: '';
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  position: absolute;
  top: 50%;
  right: 0%;
  margin-top: -10rpx;
  border-width: 4rpx 4rpx 0 0;
  border-style: solid;
  border-color: #d2d2d2;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
