page {
  font-family: -apple-system-font, Helvetica Neue, sans-serif;
  line-height: 1.6;
  background: #f0f2f5;
}

/*搜索框按钮*/

.btn-search {
  position: relative;
}

.btn-search image {
  position: absolute;
  width: 15px;
  height: 15px;
  margin-top: 10px;
  margin-left: 16px;
  z-index: 1;
}

.search-input {
  position: absolute;
  background-color: #fff;
  opacity: 0.26;
  padding-left: 40px;
  height: 35px;
  line-height: 35px;
  border-radius: 17px;
  float: left;
  font-size: 14px;
  width: 60.3%;
}

/*增加按钮*/

.addOrder {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #629aff;
  box-shadow: 0 3px 5px 0 rgba(98, 154, 255, 0.68);
  position: relative;
}

.line {
  position: absolute;
  border-radius: 5px;
  background: white;
}

.line-row {
  width: 10rpx;
  height: 60rpx;
  left: 43rpx;
  top: 18rpx;
}

.line-col {
  width: 60rpx;
  height: 10rpx;
  left: 18rpx;
  top: 43rpx;
}

/*布局  */

.container {
  padding: 2% 2.7%;
}

.card {
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 4rpx 0 rgba(0, 0, 0, 0.1);
}

.btn-default {
  width: 58px;
  height: 25px;
  line-height: 25px;
  border-radius: 100px;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
}

.btn-lg {
  width: 214px;
  height: 45px;
  line-height: 45px;
  color: #fff;
  text-align: center;
  font-size: 36rpx;
  border-radius: 21.5px;
  box-shadow: 0 3px 5px 0 rgba(98, 154, 255, 0.47);
}

/*按钮按下效果  */

.btn-default:active, .btn-lg:active {
  opacity: 0.6;
}

