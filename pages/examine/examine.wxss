/* examine.wxss */
@import '../tpls/examine-cell/examine-cell.wxss';
@import '../tpls/dialog/dialog.wxss';

.nav-search {
  padding: 2% 2.7%;
  height: 120px;
  background-color: #629aff;
}

.search-bar {
  border-radius: 17px;
  height: 34px;
  background-color: #88b3ff;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*搜索栏默认字体样式  */

.search-hold {
  font-size: 12px;
  color: #fff;
  opacity: 0.6;
  margin-left: 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/*下拉列表部分  */

.drop-down-bar {
  margin-top: 8px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.select-item {
  display: flex;
  justify-content: center;
  height: 18px;
  font-size: 13px;
  color: #e0ebff;
  flex: 1;
}

.select-item-text {
  margin-right: 10px;
}

.select-options {
  margin-top: 14px;
  position: relative;
  width: 66px;
  padding: 14px 15px;
  border-radius: 5px;
  background-color: #88b3ff;
  /* opacity: 0.6; */
  margin-right: 25px;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.options-item {
  color: #fff;
  font-size: 14px;
  line-height: 14px;
  margin-bottom: 14px;
}

.options-item:last-of-type {
  margin-bottom: 0;
}

/* 黄色字体 */

.color-fdd600 {
  color: #fdd600;
}

.msg {
  display: flex;
  justify-content: center;
  align-content: center;
  margin-top: 30%;
  color: #629aff;
  font-size: 24px;
}
