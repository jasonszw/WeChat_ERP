/* order-list.wxss */
@import '../tpls/order-cell/order-cell.wxss';

.search-container {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.nav {
  padding: 5.2% 8%;
  height: 80px;
  background-color: #629aff;
}

.search-bar {
  border-radius: 17px;
  height: 34px;
  background-color: #88b3ff;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*搜索栏默认字体样式  */

.search-hold {
  font-size: 12px;
  color: #fff;
  opacity: 0.6;
  margin-left: 10px;
  -webkit-line-clamp: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/*下拉列表部分  */

.nav-search {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.search-item {
  display: flex;
  border-radius: 17px;
  justify-content: center;
  height: 34px;
  line-height: 34px;
  font-size: 14px;
  background-color: #88b3ff;
  color: #fff;
  flex: 0.6;
}

.search-item:last-of-type {
  margin-left: 11px;
  flex: 1;
}

.select-item-text {
  margin-right: 10px;
}

.select-options {
  margin-top: 14px;
  position: relative;
  width: 20%;
  padding: 14px 10px;
  border-radius: 5px;
  background-color: #88b3ff;
  margin-right: 25px;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.options-item {
  color: #fff;
  font-size: 14px;
  line-height: 14px;
  margin-bottom: 14px;
}

.options-item:last-of-type {
  margin-bottom: 0;
}

/* 黄色字体 */

.color-fdd600 {
  color: #fdd600;
}

.foot {
  border-radius: 0;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 48px;
  display: flex;
  justify-content: center;
  background-color: #fff;
  color: #fff;
}

.circle-btn {
  position: relative;
  top: -12px;
  width: 48px;
  height: 48px;
  border-radius: 100px;
  background-color: #629aff;
  box-shadow: 0 3px 5px 0 rgba(98, 154, 255, 0.68);
  line-height: 48px;
  text-align: center;
}

.circle-btn:active {
  opacity: 0.6;
}

.add-icon {
  height: 18px;
  width: 18px;
}

.msg {
  display: flex;
  justify-content: center;
  align-content: center;
  margin-top: 30%;
  color: #629aff;
  font-size: 24px;
}
