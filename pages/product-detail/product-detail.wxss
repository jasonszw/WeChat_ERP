/* add-product.wxss */

.bg-150 {
  height: 150px;
  background-color: #629aff;
}

.list {
  font-size: 14px;
  padding: 0 16px;
}

.list-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  padding-top: 16px;
  padding-bottom: 10px;
  border-bottom: solid 1px #eee;
}

/*列表项  */

.list-item-title {
  flex: 0.5;
  color: #87898d;
}

/*项描述  */

.list-item-desc {
  flex: 1;
  color: #454545;
}

.btn-area {
  margin-top: 24.3%;
  display: flex;
  justify-content: center;
  align-items: center;
}
