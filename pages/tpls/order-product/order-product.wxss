.list-2 {
  background-color: #d6e6ff;
  margin-top: 10px;
  padding-left: 10px;
  padding-bottom: 17.1px;
}

.list2-title {
  padding: 11px 0;
  font-size: 14px;
  letter-spacing: 1px;
  color: #454545;
}

.list2-content {
  border-top: 1px solid #fff;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-content: center;
  padding: 10px 0;
  padding-right: 10px;
}

.list2-item {
  flex: 1;
  height: 28px;
  line-height: 28px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.num-input {
  display: block;
  padding-left: 5px;
  margin-right: 7px;
  height: 28px;
  line-height: 28px;
  background-color: #fff;
}

.amount-input {
  padding-left: 5px;
  height: 28px;
  line-height: 28px;
  margin-right: 7px;
  background-color: #fff;
}

.list2-foot {
  margin-right: 10px;
  display: flex;
  flex-direction: row;
  height: 28px;
  line-height: 28px;
  background-color: #fff;
  padding: 5px 6px;
  color: #454545;
}

.remarks-input {
  flex: 0.8;
  padding-top: 3px;
}
